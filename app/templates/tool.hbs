<div class="modal fade" id="addFeatureModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Add feature</h4>
      </div>
      <ul class="list-group">
        {{#each capabilities as |capability|}}
          <li class="list-group-item add-feature" {{action 'addFeature' capability}}>
            {{capability.title}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading media">
        {{#if isEditingTitle}}
          <h1 class="media-heading panel-title pull-left tool-title">
            {{input id="inputTitle" type="text" value=model.title enter="save" focus-out="save" autofocus="autofocus"}}
          </h1>
        {{else}}
          <h1 class="media-heading panel-title pull-left tool-title" {{action "edit" "Title" on="click"}}>
            {{model.title}}
          </h1>
        {{/if}}
        {{#if isEditingSubtitle}}
          <h1 class="media-heading panel-title pull-left tool-subTitle">
            {{input id="inputSubtitle" type="text" value=model.subTitle enter="save" focus-out="save" autofocus="autofocus"}}
          </h1>
        {{else}}
          <h1 class="media-heading panel-title pull-left tool-subTitle" {{action "edit" "Subtitle" on="click"}}>
            ({{model.subTitle}})
          </h1>
        {{/if}}
        <a class="btn pull-right nopadding" {{action "delete"}}>
          <span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span>
        </a>
  </div>
  <div class="panel-body">
    {{#if isEditingDescription}}
      {{input id="inputDescription" type="text" value=model.description enter="save" focus-out="save" autofocus="autofocus"}}
    {{else}}
        <p class="tool-description" {{action "edit" "Description" on="click"}}>
          {{model.description}}
        </p>
    {{/if}}
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Features
      <a class="btn pull-right add-feature" data-toggle="modal" data-target="#addFeatureModal">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </a>
    </h3>
  </div>
  <ul class="list-group">
    {{#each model.features as |feature|}}
      <li class="list-group-item">
        {{#link-to 'capability' feature.capability classNames='capability-title'}}
          {{feature.capability.title}}
        {{/link-to}}
        {{#if feature.supportsSomething ~}}
          (<ul class="list-unstyled comma">
            {{~#each feature.supports as |concept| ~}}
              <li class="supports-title">{{concept.title}}</li>
            {{~/each~}}
          </ul>)
        {{/if}}
        <a class="btn pull-right" {{action 'removeFeature' feature}}>
          <span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span>
        </a>
      </li>
    {{/each}}
  </ul>
</div>

<p>
  Created: {{model.created}}<br/>
  Last updated: {{model.updated}}
</p>
