<div class="modal fade" id="addFeatureModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add feature</h4>
      </div>
      <ul class="list-group">
        {{#each tasks as |task|}}
          <li class="list-group-item add-feature" {{action 'addFeature' task}}>
            {{task.title}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading media">
        {{#if isEditingTitle}}
          <h1 class="media-heading panel-title pull-left tool-title">
            {{input id="inputTitle" type="text" value=model.title enter="save" focus-out="save" autofocus="autofocus"}}
          </h1>
        {{else}}
          <h1 class="media-heading panel-title pull-left tool-title" {{action "edit" "Title" on="click"}}>
            {{model.title}}
          </h1>
        {{/if}}
        {{#if isEditingSubtitle}}
          <h1 class="media-heading panel-title pull-left tool-subTitle">
            {{input id="inputSubtitle" type="text" value=model.subTitle enter="save" focus-out="save" autofocus="autofocus"}}
          </h1>
        {{else}}
          <h1 class="media-heading panel-title pull-left tool-subTitle" {{action "edit" "Subtitle" on="click"}}>
            ({{model.subTitle}})
          </h1>
        {{/if}}
        <a class="btn pull-right nopadding" {{action "delete"}}>
          <span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span>
        </a>
  </div>
  <div class="panel-body">
    {{#if isEditingDescription}}
      {{input id="inputDescription" type="text" value=model.description enter="save" focus-out="save" autofocus="autofocus"}}
    {{else}}
        <p class="tool-description" {{action "edit" "Description" on="click"}}>
          {{model.description}}
        </p>
    {{/if}}
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Features
      <a class="btn pull-right" data-toggle="modal" data-target="#addFeatureModal">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </a>
    </h3>
  </div>
  <ul class="list-group">
    {{#each model.implements as |implements|}}
      {{#each implements.feature.isCapableOf as |isCapableOf|}}
        <li class="list-group-item">
          {{#link-to 'task' isCapableOf.task classNames='task-title'}}
            {{isCapableOf.task.title}}
          {{/link-to}}
          <a class="btn pull-right" {{action 'removeFeature' implements.feature}}>
            <span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span>
          </a>
        </li>
      {{/each}}
    {{/each}}
  </ul>
</div>

<p>
  Created: {{model.created}}<br/>
  Last updated: {{model.updated}}
</p>
