{
    "swagger": "2.0", 
    "produces": [
        "application/json"
    ], 
    "host": "looks-lika-a-nail-backend.herokuapp.com", 
    "info": {
        "description": "An API to discover and contribute information about software tools", 
        "version": "0.1.0", 
        "title": "Tool Directory API"
    }, 
    "basePath": "/api/v1", 
    "consumes": [
        "application/json"
    ], 
    "paths": {
        "/tools": {
            "post": {
                "description": "Creates a new tool", 
                "parameters": [
                    {
                        "name": "tool", 
                        "in": "body", 
                        "description": "Tool to add", 
                        "schema": {
                            "$ref": "#/definitions/tool"
                        }, 
                        "required": true
                    }
                ], 
                "produces": [
                    "application/json"
                ], 
                "operationId": "addTool", 
                "responses": {
                    "default": {
                        "description": "unexpected error", 
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }, 
                    "200": {
                        "description": "tiik response", 
                        "schema": {
                            "$ref": "#/definitions/tool"
                        }
                    }
                }
            }, 
            "get": {
                "description": "Returns all tools", 
                "produces": [
                    "application/json"
                ], 
                "operationId": "findTools", 
                "responses": {
                    "default": {
                        "description": "unexpected error", 
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }, 
                    "200": {
                        "description": "tool response", 
                        "schema": {
                            "items": {
                                "$ref": "#/definitions/tool"
                            }, 
                            "type": "array"
                        }
                    }
                }
            }
        }, 
        "/tools/{id}": {
            "get": {
                "description": "Returns a tool based on ID", 
                "parameters": [
                    {
                        "in": "path", 
                        "format": "int64", 
                        "name": "id", 
                        "description": "ID of tool to fetch", 
                        "type": "integer", 
                        "required": true
                    }
                ], 
                "produces": [
                    "application/json"
                ], 
                "operationId": "findToolById", 
                "responses": {
                    "default": {
                        "description": "unexpected error", 
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }, 
                    "200": {
                        "description": "tool response", 
                        "schema": {
                            "$ref": "#/definitions/tool"
                        }
                    }
                }
            }, 
            "delete": {
                "description": "deletes a single tool based on the ID supplied", 
                "parameters": [
                    {
                        "in": "path", 
                        "format": "int64", 
                        "name": "id", 
                        "description": "ID of tool to delete", 
                        "type": "integer", 
                        "required": true
                    }
                ], 
                "operationId": "deleteTool", 
                "responses": {
                    "204": {
                        "description": "tool deleted"
                    }, 
                    "default": {
                        "description": "unexpected error", 
                        "schema": {
                            "$ref": "#/definitions/errorModel"
                        }
                    }
                }
            }
        }
    }, 
    "schemes": [
        "http"
    ], 
    "definitions": {
        "tool": {
            "properties": {
                "title": {
                    "description": "Human readable title", 
                    "type": "string"
                }, 
                "subTitle": {
                    "description": "Human readable sub title", 
                    "type": "string"
                }, 
                "updated": {
                    "description": "When this item was last modified", 
                    "format": "dateTime", 
                    "type": "string"
                }, 
                "id": {
                    "description": "Unique identifier", 
                    "type": "number"
                }, 
                "description": {
                    "description": "A description of this item", 
                    "type": "string"
                }, 
                "created": {
                    "description": "When this item was created", 
                    "format": "dateTime", 
                    "type": "string"
                }, 
                "keywords": {
                    "description": "List of applicable keywords", 
                    "type": "array", 
                    "items": {
                        "description": "keyword / alias", 
                        "type": "string"
                    }
                }
            }
        }, 
        "errorModel": {
            "properties": {
                "message": {
                    "type": "string"
                }, 
                "code": {
                    "format": "int32", 
                    "type": "integer"
                }
            }, 
            "required": [
                "code", 
                "message"
            ]
        }
    }
}